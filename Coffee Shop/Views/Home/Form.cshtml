<form asp-method="post" asp-action="result">
    <p>Enter First Name:</p>
    <input type="text" name="FirstName" />

    <p>Enter Last Name:</p>
    <input type="text" name="LastName" />

    <p>Enter Email Address:</p>
    <input type="email" name="Email" />

    <p>Enter Password:</p>
    <input type="password" name="Password" />

    <p>Are you lactose intollerant</p>
    <input type="checkbox" name="Lactose" value="true" />

    <p>Please select your favorite Latte Flavor</p>
    <select name="Flavor">
        <option value="Vanilla">Vanilla</option>
        <option value="Caramel">Caramel</option>
        <option value="Cinnamon">Cinnamon</option>
        <option value="Strawberry">Strawberry</option>
        <option value="White Chocolate Mocha">White Chocolate Mocha</option>
        <option value="Hazelnut">Hazelnut</option>
        <option value="Peppermint">Peppermint</option>
    </select>

    <input type="submit" class="btn btn-primary" />
</form>